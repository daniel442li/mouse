import tkinter as tk
from tkinter import *
import pyautogui
import time
import tkinter as tk
import keyboard

global stop
stop = 0


def changeLabel():
    global stop
    coords = pyautogui.position()
    if stop == 0:
        coordLabel['text'] = coords

    window.after(10, lambda: changeLabel())

def change():
    global stop
    stop = 0

def center_window():
    global stop
    mousepos = pyautogui.position()
    intx, inty = mousepos
    xcoord = intx + 5
    ycoord = inty + 10
    editedPos = (xcoord, ycoord)
    if keyboard.is_pressed('z'):  # if key 'a' is pressed
        if stop == 0:
            stop = 1
        else:
            change()
    window.geometry('+%d+%d' % editedPos)
    window.after(5, lambda: center_window())

window = Tk()
center_window()
window.title("Mouse Position")
window.overrideredirect(1)
window.attributes("-topmost", True)
window.wm_attributes('-transparentcolor', window['bg'])
coordLabel = tk.Label(text='', borderwidth=2, bg="#D3D3D3")
coordLabel.grid(row=1, column=1, sticky="w", padx=10)
changeLabel()

window.mainloop()


